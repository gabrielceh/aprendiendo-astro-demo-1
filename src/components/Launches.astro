---
// Podemos ejecutat el js o ts que querramos
import {getLaunches} from "@/services/spacex.service"
import CardLaunch from "./CardLaunch.astro";

const launches = await getLaunches()
---

<div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
	{
		launches.map(({details, flight_number, id, links, name, success}) =>(
			<CardLaunch 
				details={details} 
				flightNumber={flight_number} 
				id={id} 
				img={links.patch.small} 
				name={name} 
				success={success}
			/>
		))
	}
</div>
